# Create the list of participants p
p <- c("Chris", "Carla", "Jim", "Pam", "Leslie", "Ben", "Mitch", "Cameron", "Louis", "Jessica", "Dwight", "Jeremy", "Ray", "Andy")
# create a vector of randomly sampled names of participants w/o replacement
p1 <- sample(p, 14, replace= FALSE)
# create a second vector of randomly sample names of participants w/o replacement
p2 <- sample(p, 14, replace= FALSE)
#create a dataframe with col1 "Santas" (gift givers) from vector p1, and col2 "Recipeients" (gift receivers) from vector p2
xlist <- data.frame("Santas"= p1, "Recipients"= p2)
xlist
